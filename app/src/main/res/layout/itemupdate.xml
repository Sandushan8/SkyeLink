<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/adminbackg"
    android:padding="1dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewRecord"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/purple_500"
        android:src="@drawable/addphoto" />

    <EditText
        android:id="@+id/itemName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_btn"
        android:ems="10"

        android:hint="item Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/itemCategory"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:background="@drawable/edit_btn"
        android:hint="itemCategory "
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/itemDescription"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:background="@drawable/edit_btn"
        android:hint="ItemDescription "
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/itemSellPrice"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:background="@drawable/edit_btn"
        android:hint="Item Sell Price "
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnUpdate"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemSellPrice"
        android:layout_marginTop="26dp"
        android:background="@drawable/btnstyle"
        android:onClick="addItems"
        android:text="Update "
        android:textColor="#4E342E" />

</LinearLayout>

